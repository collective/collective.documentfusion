<?xml version="1.0"?>
<registry>
  <record name="collective.documentfusion.interfaces.ISettings.fusion_service_port"
          interface="collective.documentfusion.interfaces.ISettings"
          field="fusion_service_port">
    <field type="plone.registry.field.Int">
      <default>8765</default>
      <description>py3o.fusion port</description>
      <required>True</required>
      <title>py3o.fusion port</title>
    </field>
    <value>8765</value>
  </record>
  <record name="collective.documentfusion.interfaces.ISettings.fusion_service_host"
          interface="collective.documentfusion.interfaces.ISettings"
          field="fusion_service_host">
    <field type="plone.registry.field.ASCIILine">
      <default>localhost</default>
      <description>py3o.fusion host</description>
      <required>True</required>
      <title>py3o.fusion host</title>
    </field>
    <value>localhost</value>
  </record>
  <record name="collective.documentfusion.interfaces.ISettings.auto_refresh_enabled"
          interface="collective.documentfusion.interfaces.ISettings"
          field="auto_refresh_enabled">
    <field type="plone.registry.field.Bool">
      <default>True</default>
      <description>Automatic refresh of generated files is enabled</description>
      <required>True</required>
      <title>Automatic refresh enabled</title>
    </field>
    <value>True</value>
  </record>
  <record name="collective.documentfusion.interfaces.ISettings.disable_async"
          interface="collective.documentfusion.interfaces.ISettings"
          field="disable_async">
    <field type="plone.registry.field.Bool">
      <default>False</default>
      <description>For development or test mode</description>
      <required>True</required>
      <title>Prevent using async document generation</title>
    </field>
    <value>False</value>
  </record>
  <record name="collective.documentfusion.interfaces.ISettings.fusion_timeout"
          interface="collective.documentfusion.interfaces.ISettings"
          field="fusion_timeout">
    <field type="plone.registry.field.Int">
      <default>10</default>
      <description>The maximum time (in seconds) the worker will wait for py3o.fusion service response.</description>
      <required>True</required>
      <title>Fusion service timeout</title>
    </field>
    <value>10</value>
  </record>
</registry>
